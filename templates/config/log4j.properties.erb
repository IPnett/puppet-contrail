log4j.rootLogger=<%= @ifmap_server_loglevel %>
log4j.error

log4j.logger.de.fhhannover.inform.irond.proc=<%= @ifmap_server_loglevel %>, A1
log4j.additivity.de.fhhannover.inform.irond.proc=false

log4j.appender.A1=org.apache.log4j.RollingFileAppender
log4j.appender.A1.MaxFileSize=100MB
log4j.appender.A1.MaxBackupIndex=5
log4j.appender.A1.File=<%= @ifmap_server_logfile  %>
log4j.appender.A1.layout=org.apache.log4j.PatternLayout
log4j.appender.A1.layout.ConversionPattern=%d [%t] %-5p %x - %m%n
